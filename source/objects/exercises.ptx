</postamble>
        <tests visible="yes">

#define DOCTEST_CONFIG_IMPLEMENT_WITH_MAIN
#include "doctest.h"

TEST_CASE("Test getPerimeter") {
    Rectangle r1;
    r1.setWidth(3);
    r1.setHeight(4);
    Rectangle r2;
    r2.setWidth(5);
    r2.setHeight(6);

    CHECK(r1.getPerimeter() == doctest::Approx(14));
