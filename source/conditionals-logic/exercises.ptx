            if x + y is even.</p>
    </statement>
    <blocks>
      <block>
        <choice correct="yes">
          <cline>if (x == y) {</cline>
        </choice>
        <choice>
          <cline>if (x = y) { </cline>
        </choice>
      </block>
      <block>
        <cline><![CDATA[ cout << "Pick me!";]]></cline>
        <cline>}</cline>
      </block>
      <block>
        <choice correct="yes">
          <cline>else if (y &gt; x) {</cline>
        </choice>
        <choice>
          <cline>if (x &lt; y) { </cline>
        </choice>
      </block>
      <block>
        <cline><![CDATA[ cout << "Choose me!";]]></cline>
        <cline>}</cline>
      </block>
      <block>
        <choice correct="yes">
          <cline>else if ((x + y) % 2 == 0) {</cline>
        </choice>
        <choice>
          <cline>else (x + y % 2 == 0) { </cline>
        </choice>
      </block>
      <block>
        <cline>else if (x + y % 2 == 0) { </cline>
      </block>
      <block>
        <cline><![CDATA[ cout << "Love me!"; }]]></cline>
      </block>
    </blocks>
